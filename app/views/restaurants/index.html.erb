<p>
  <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-secondary m-3" %>
</p>
<div class="container">
  <h1>Restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: 'text-dark text-decoration-none' do %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="card-product-infos">
            <h2><%= restaurant.name %></h2>
            <p>Category: <%= restaurant.category %></p>
            <p>Address: <%= restaurant.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
